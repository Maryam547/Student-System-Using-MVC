@model students

@{
    SelectList deptOptions = new SelectList(ViewBag.depts, "Id", "DepartmentName");
} 
@{ 
     SelectList crsOptions = new SelectList(ViewBag.courses, "Id", "CourseName"); 
 }
<h2>Add Student</h2>
<form method="post" asp-action="AddStudent" asp-controller="Student">
    <input asp-for="Id" class="form-control" hidden>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
    </div>
    
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" type="number" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" type="text" class="form-control">
    </div>

    <div class="form-group">
        <label>Department</label>
        <select asp-for="DepartmentId" asp-items="ViewBag.depts" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Courses</label>
        <div>
            

            @foreach (var course in (List<SelectListItem>)ViewBag.Courses)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="selectedCourses"
                           value="@course.Value" id="course_@course.Value">
                    <label class="form-check-label" for="course_@course.Value">@course.Text</label>
                </div>
            }
        </div>

    </div>



     <button type="submit" class="btn btn-primary">Save</button>
</form>