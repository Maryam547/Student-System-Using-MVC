@using MVCD2.Models
@model List<Instructors>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Age</th>
            <th scope="col">Salary</th>
            <th scope="col">HireDate</th>
            <th scope="col">Departments</th>
            <th scope="col">Details</th>
            <th scope="col">Editing</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var ins in Model)
        {
            <tr>
                <th scope="row">@ins.Id</th>
                <td>@ins.FName @ins.LName</td>
                <td>@ins.Image</td>
                <td>@ins.Age</td>
                <td>@ins.Salary</td>
                <td>@ins.HireDate</td>
                <td>@(ins.Department != null ? ins.Department.DepartmentName : "No Department")</td>
                <td><a href="/Instructor/DetailsVM/@ins.Id" class="btn btn-outline-primary">Details</a></td>
                <td><a href="/Instructor/Edit/@ins.Id" class="btn btn-outline-primary">Edit</a></td>

            </tr>
        }

    </tbody>
</table>
<a href="/Instructor/Add" class="btn btn-outline-primary">New</a>
