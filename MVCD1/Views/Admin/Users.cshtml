@model IEnumerable<ApplicationUser>

<h2>Users</h2>
<a asp-action="AddUser" class="btn btn-success">Add New User</a>
<table class="table">
    <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FullName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
