@model List<MVCD2.ViewModel.CourseViewModel>
@using MVCD2.ViewModel;

<h2> Edit Your Courses </h2>

<form asp-action="EditCourse" method="post">
    @foreach (var course in Model)
    {
        <div>
            <input type="checkbox" name="selectedCourses" value="@course.Id" @(course.IsEnrolled ? "checked" : "") />
            <label>@course.Name - @course.Description</label>
        </div>
    }
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
