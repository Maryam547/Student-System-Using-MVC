@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="text-center">Admin Dashboard</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Departments</h5>
                    <p class="card-text">Manage departments in the system.</p>
                    <a asp-controller="Admin" asp-action="Departments" class="btn btn-primary">View Departments</a>
                    <a asp-controller="Admin" asp-action="AddDepartment" class="btn btn-success">Add Department</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Users Management</h5>
                    <p class="card-text">Manage users (Admins, Instructors, Students).</p>
                    <a asp-controller="Admin" asp-action="Users" class="btn btn-primary">View Users</a>
                    <a asp-controller="Admin" asp-action="AddUser" class="btn btn-success">Add User</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Other Actions</h5>
                    <p class="card-text">Perform other admin actions.</p>
                    <a asp-controller="Admin" asp-action="DeleteDepartment" class="btn btn-danger">Delete Department</a>
                </div>
            </div>
        </div>
    </div>
</div>
