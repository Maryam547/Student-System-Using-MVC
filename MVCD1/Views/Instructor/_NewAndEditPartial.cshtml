@model Instructors

<form method="post" asp-action="@ViewBag.Action" asp-controller="Instructor">
    @if (ViewBag.Action == "Edit")
    {
        <input type="hidden" name="Id" value="@Model?.Id" />
    }

    <div class="form-group">
        <label>First Name</label>
        <input asp-for="FName" class="form-control" required>
        <span asp-validation-for="FName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="LName" class="form-control" required>
        <span asp-validation-for="LName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Salary</label>
        <input asp-for="Salary" type="number" class="form-control" required>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Image</label>
        <input asp-for="Image" type="text" class="form-control">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Age</label>
        <input asp-for="Age" type="number" class="form-control" required>
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Hire Date</label>
        <input asp-for="HireDate" type="date" class="form-control" required>
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Departments</label>
        <select asp-for="DepartmentId" asp-items="ViewBag.depts" class="form-control">
            <option value="">Select a department</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Courses</label><br>
        @if (ViewBag.Courses != null)
        {
            @foreach (var course in ViewBag.Courses)
            {
                <input type="checkbox" name="courses" value="@course.Id"
                @(ViewBag.SelectedCourses != null && ViewBag.SelectedCourses.Contains(course.Id) ? "checked" : "") />
                <label>@course.CourseName</label>
            }
        }
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
</form>
